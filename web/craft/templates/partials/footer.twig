<footer id="footer" class="footer">
  <div class="footer_main">
    <div class="container row">
      <div class="c_3_block">
        <div class="footer_block">
        <div class="footer_logo">
          <a href="{{ siteUrl }}"><img src="http://rb.dev/globals/rb_logo_white.png" alt=""><span> {{ siteName }} </span></a>
        </div>
        <div class="footer_social">
          {% for icons in footer.socialIcon %}
            <a href="{{icons.socialLink.url}}"  alt="{{icons.socialName}}"><i class="fa fa-{{icons.iconImage}} {{icons.iconImage}}" aria-hidden="true"></i></a>
          {% endfor %}
        </div>
        <!-- <span class="location">OKC</span> -->
      </div>
      </div>
      <div class="c_3">
        <p>Explore</p>
          <p><a href="{{siteUrl}}about">About</a></p>
          <p><a class="focus_button" href="{{siteUrl}}shop">Shop</a></p>
          <p><a href="{{siteUrl}}work">Work</a></p>
          <p><a href="{{siteUrl}}contact">Contact</a></p>
      </div>
      <div class="c_2">
        <p>Blog</p>
        {% for link in footer.footerColumn2 %}
          <p><a href="{{link.footerLink.url}}" {{link.footerLink.target}}>{{link.footerLink.text}}</a></p>
        {% endfor %}
      </div>
      <div class="c_4">
        <p>Featured Posts</p>
        {% for link in footer.footerColumn3 %}
          <p><a href="{{link.footerLink.url}}" {{link.footerLink.target}}>{{link.footerLink.text}}</a></p>
        {% endfor %}
      </div>
    </div>
  </div><!--END footer__main-->
  <div class="footer_bottom">
    <div class="quotes">
      {% set quote = footer.footerQuote.order('RAND()').first() %}
      <p>"{{quote.quote}}"</p>
      <span class="author">- {{quote.author}}</span>
    </div>
    <div class="copyright">
      <span>&copy; ryanbott.com</span>
    </div>
  </div>
</footer>
